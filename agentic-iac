#!/usr/bin/env python3
import sys
from pathlib import Path

print("🧠 Starting AI-powered application analysis...")

app_path = sys.argv[1] if len(sys.argv) > 1 else "demo-apps/simple-nodejs-api"
print(f"📂 Analyzing: {app_path}")

if Path(app_path).exists():
    print(f"✅ Application found at: {app_path}")
    print("🔍 Performing AI analysis...")
    print("📊 Generating infrastructure recommendations...")
    print("🎉 Analysis completed successfully!")
else:
    print(f"❌ Application not found at: {app_path}")
    print("Available directories:")
    for p in Path(".").iterdir():
        if p.is_dir() and not p.name.startswith('.'):
            print(f"  - {p.name}/")
